<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.TambahMakanan">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/gambarresep"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:maxLines="4"
                        android:text="Tekan Gambar untuk menambahkan gambar pada resep"
                        android:textSize="12dp" />

                    <ImageButton
                        android:id="@+id/gambarresep"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/ic_photo_camera" />
                </RelativeLayout>


                <View style="@style/Divider"></View>


                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/judulresep"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Judul Resep"
                            android:textSize="12dp" />
                    </android.support.design.widget.TextInputLayout>

                </RelativeLayout>


                <View style="@style/Divider"></View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/labelkategori"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:textSize="12dp"
                        android:text="Pilih kategori resep yang kamu buat" />

                    <Spinner
                        android:id="@+id/kategori"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/labelkategori"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="10dp">

                    </Spinner>
                </RelativeLayout>

                <View style="@style/Divider"></View>


                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/labelalat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Alat yang digunakan"
                        android:textSize="12dp" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/labelalat">

                        <EditText
                            android:id="@+id/alat"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="100"
                            android:textSize="12dp" />
                    </android.support.design.widget.TextInputLayout>
                </RelativeLayout>


                <View style="@style/Divider"></View>


                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/labelbahan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Bahan yang digunakan"
                        android:textSize="12dp" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/labelbahan">

                        <EditText
                            android:id="@+id/bahan"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="100"
                            android:textSize="12dp" />
                    </android.support.design.widget.TextInputLayout>
                </RelativeLayout>


                <View style="@style/Divider"></View>


                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/labelcarapembuatan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Cara pembuatan yang digunakan"
                        android:textSize="12dp" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/labelcarapembuatan">

                        <EditText
                            android:id="@+id/langkah"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="100"
                            android:textSize="12dp" />
                    </android.support.design.widget.TextInputLayout>
                </RelativeLayout>

            </LinearLayout>

            <View style="@style/Divider"></View>

            <Button
                android:id="@+id/simpan"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Simpan"
                android:textStyle="bold" />
        </LinearLayout>

    </ScrollView>
</android.support.constraint.ConstraintLayout>
